// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())   // Unique ID
  email     String   @unique                // User email, must be unique
  firstName String?                          // Nullable (optional)
  lastName  String?                          // Nullable (optional)
  imageUrl  String?                          // Clerk profile image URL (optional)
  createdAt DateTime @default(now())         // Auto timestamp
  updatedAt DateTime @updatedAt              // Auto updated timestamp
}

